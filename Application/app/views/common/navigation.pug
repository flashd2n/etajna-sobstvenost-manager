div.container-fluid
    div.navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#nav-controls-container" aria-expanded="false")
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
    div#nav-controls-container.collapse.navbar-collapse
        ul.nav.navbar-nav
            li(class=page=='home' ? 'active' : '')
                a(href="/") Home
            li(class=page=='page_of_shame' ? 'active' : '')
                a(href="/page-of-shame") Page of Shame
            li(class=page=='expenses' ? 'active' : '')
                a(href="/expenses") Expenses
            if !loggedUser
                li(class=page=='register' ? 'active' : '')
                    a(href="/register") Sign Up
                li(class=page=='login' ? 'active' : '')
                    a(href="/login") Login
            else
                if (loggedUser.type == 'admin')
                    li(class=page=='admin' ? 'active' : '')
                        a(href="/admin") Admin
                if (loggedUser.type == 'apartment')
                    li(class=page=='apartment' ? 'active' : '')
                        a(href="/apartment/" + loggedUser.id) My apartment
                li(class=page=='chat' ? 'active' : '')
                    a(href="/chat") Chat                
                li(class=page=='logout' ? 'active' : '')
                    a(href="/logout") Logout 
                        strong #{loggedUser.username}
