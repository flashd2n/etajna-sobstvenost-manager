extends common/container
block contents
    h1.row
        | Login
    div.container.visible-lg.visible-md.visible-sm.visible-xs.col-lg-12.col-md-12.col-sm-12.col-xs-12
        form#login(method="POST" class="form-horizontal")
            div.form-group.visible-lg.visible-md.visible-sm.visible-xs.col-lg-12.col-md-12.col-sm-12.col-xs-12
                label(for="username" class="control-label col-xs-2") Username:
                input.form-control.username(type="text" name="username" class="form-control" id="username" placeholder="Username")
            div.form-group.visible-lg.visible-md.visible-sm.visible-xs.col-lg-12.col-md-12.col-sm-12.col-xs-12
                label(for="password" class="control-label col-xs-2") Password:
                input.form-control.password(type="password" name="password" class="form-control" id="password" placeholder="Password")
            div.form-group.visible-lg.visible-md.visible-sm.visible-xs.col-lg-12.col-md-12.col-sm-12.col-xs-12
                button.btn.btn-success.login(type="submit") Login
block footer
    script
        | System.import("login");