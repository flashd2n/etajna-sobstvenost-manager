extends common/container
block contents
    h1.row
        span.hidden-xs All 
        | Expenses
    h2.row
        | Pending 
        span.hidden-xs Expenses
    div.panel.panel-default
            each expense in pending
                div.list-group
                    a.list-group-item(href="/expenses/" + expense._id)
                        span
                            | #{expense.name} 
                        span
                            | Payment Cost: 
                            span.pending-expense-cost
                                | #{expense.cost}
    h2.row
        | Completed 
        span.hidden-xs Expenses
    div.panel.panel-default
            each expense in completed
                div.list-group
                    a.list-group-item(href="/expenses/" + expense._id)
                        span
                            | #{expense.name} 
                        span
                            | Payment Cost: 
                            span.completed-expense-cost
                                | #{expense.cost}
